
@model CPCAnnexureI
@{
    ViewBag.Title = "Cash Receiving Details";
    var details = ViewBag.Details as List<Vew_CPCAnnexureI>;
    //var denomList = ViewBag.DenomList as List<CustomSelectList>;
}

<style>
    #annexurelI th {
        text-align: center !important;
    }

    .field-validation-error {
        color: red;
    }
</style>
<form id="lead-frm" class="user-Profile" method="post" enctype="multipart/form-data">

    <div class="row">
        <div class="col-sm-12 text-right">
            <div class="btn-group" role="group">
                <a href="javascript://" onclick="window.history.back()" class="btn btn-default"><i class="fa fa-close"></i> Cancel / Back</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4> @ViewBag.Title </h4>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="row form-group">
                                        <label class="col-sm-4 text-left horizontal-label">Order Number</label>
                                        <div class="col-sm-8">
                                            <label class="label label-default">@Model.OrderNumber</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="row form-group">
                                        <label class="col-sm-4 text-left horizontal-label">Sr. Number</label>
                                        <div class="col-sm-8">
                                            <label class="label label-default">@Model.SrNo</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="row form-group">
                                        <label class="col-sm-3 horizontal-label">Collection Date</label>
                                        <div class="col-sm-9">
                                            <label class="label label-default">@Model.DateOfCollection.ToString(Constants.DATE_FORMAT_CLIENT_SIDE)</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row tb-padding">
                        <table id="annexureI" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th style="width:5% !important">Sr.No</th>
                                    <th>Cash Processing Cell</th>
                                    <th style="width:15% !important">Branch</th>
                                    <th>Denomination</th>
                                    <th style="width:10% !important">No. Of Bundles</th>
                                    <th>Total Amount</th>
                                    <th>Seal No.</th>
                                    <th>Shipment Receipt</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    if (details != null)
                                    {
                                        int i = 1;
                                        foreach (var item in details)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>@item.CashProcessingCellTitle</td>
                                                <td>@($"{item.BranchCode} - {item.BranchName}")</td>
                                                <td>@item.DenominationTitle</td>
                                                <td>@item.NoOfBundles</td>
                                                <td>@item.TotalAmount</td>
                                                <td>@item.SealNo</td>
                                                <td>@item.ShipmentReciptNo</td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                    else
                                    {
                                        <tr colspan="8">
                                            <td>No Details Found</td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="row form-group">
                                        <label class="col-sm-8 horizontal-label">Cash Handed Over By <b>CPC</b> Staff First Person</label>
                                        <div class="col-sm-4">
                                            <label class="label label-default">
                                                @(Model.CashHandedOverCPCStaffAId != null ? details.First().CashHandedOverCPCStaffAName : "")
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="row form-group">
                                        <label class="col-sm-8 horizontal-label">Cash Handed Over By <b>CPC</b> Staff Second Person</label>
                                        <div class="col-sm-4">
                                            <label class="label label-default">
                                                @(Model.CashHandedOverCPCStaffBId != null ? details.First().CashHandedOverCPCStaffBName : "")
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="row form-group">
                                        <label class="col-sm-8 horizontal-label">Cash Handed Over By <b>CIT</b> First Person</label>
                                        <div class="col-sm-4">
                                            <label class="label label-default">
                                                @(Model.CashHandedOverCITStaffAId != null ? details.First().CashHandedOverCITStaffAName : "")
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="row form-group">
                                        <label class="col-sm-8 horizontal-label">Cash Handed Over By <b>CIT</b> Staff Second Person</label>
                                        <div class="col-sm-4">
                                            <label class="label label-default">
                                                @(Model.CashHandedOverCITStaffAId != null ? details.First().CashHandedOverCITStaffBName : "")
                                            </label>
                                        </div>

                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="row form-group">
                                        <label class="col-sm-8 horizontal-label"> <b>CPC</b> Staff Handing Over Cash and Verifying First Person</label>
                                        <div class="col-sm-4">
                                            <label class="label label-default">
                                                @(Model.SignatureCPCHandingOverCashAId != null ? details.First().SignatureCPCHandingOverCashAName : "")
                                            </label>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="row form-group">
                                        <label class="col-sm-8 horizontal-label"><b>CPC</b> Staff Handing Over Cash and Verifying Second Person</label>
                                        <div class="col-sm-4">
                                            <label class="label label-default">
                                                @(Model.SignatureCPCHandingOverCashBId != null ? details.First().SignatureCPCHandingOverCashBName : "")
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 text-right">
            <div class="btn-group" role="group">
                <a href="javascript://" onclick="window.history.back()" class="btn btn-default"><i class="fa fa-close"></i> Cancel / Back</a>
            </div>
        </div>
    </div>
</form>

