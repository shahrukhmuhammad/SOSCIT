

@model List<Vew_SortedCash>
@{
    ViewBag.Title = "Details";
}


<form id="lead-frm" class="user-Profile" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-sm-12 text-right">
            <div class="btn-group" role="group">
                <a href="javascript://" onclick="window.history.back()" class="btn btn-default"><i class="fa fa-close"></i> Cancel / Back</a>
                <button type="submit" id="submit" class="btn btn-success"><i class="fa fa-check"></i> Submit</button>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h4> Sorted Cash </h4>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="row form-group">
                                        <label class="col-sm-4 text-left horizontal-label">Order Number</label>
                                        <div class="col-sm-8">
                                            <label class="label label-primary">@Model.FirstOrDefault().OrderNumber</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="row form-group">
                                        <label class="col-sm-4 text-left horizontal-label">Serial Number</label>
                                        <div class="col-sm-8">
                                            <label class="label label-primary">@Model.FirstOrDefault().SealNumber</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="row form-group">
                                        <label class="col-sm-3 horizontal-label">Date</label>
                                        <div class="col-sm-9">
                                            <label class="label label-primary">@Model.FirstOrDefault().Date.ToShortDateString()</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="row form-group">
                                        <label class="col-sm-4 text-left horizontal-label">Denomination</label>
                                        <div class="col-sm-8">
                                            <label class="label label-primary">@Model.FirstOrDefault().DenominationTitle</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="row form-group">
                                        <label class="col-sm-4 text-left horizontal-label">Client/Branch</label>
                                        <div class="col-sm-8">
                                            <label class="label label-primary">@Model.FirstOrDefault().BranchName</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="row form-group">
                                        <label class="col-sm-4 text-left horizontal-label">SealNumber</label>
                                        <div class="col-sm-8">
                                            <label class="label label-primary">@Model.FirstOrDefault().SealNumber</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="row form-group">
                                        <label class="col-sm-4 text-left horizontal-label">City</label>
                                        <div class="col-sm-8">
                                            <label class="label label-primary">@Model.FirstOrDefault().CityName</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="row form-group">
                                        <label class="col-sm-4 text-left horizontal-label">Total Bundles</label>
                                        <div class="col-sm-8">
                                            <label class="label label-primary">@Model.FirstOrDefault().TotalNumberBundles</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="row form-group">
                                        <label class="col-sm-4 text-left horizontal-label">Total Balance</label>
                                        <div class="col-sm-8">
                                            <label class="label label-primary">@Model.FirstOrDefault().TotalBalance</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row tb-padding">
                        <table id="mytableUnsorted" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Sorter Name
                                    </th>
                                    <th>
                                        Assigned Amount
                                    </th>
                                    <th>
                                        Re-issuable
                                    </th>
                                    <th>
                                        Soiled
                                    </th>
                                    <th>
                                        Machine Rejected
                                    </th>
                                    <th>
                                        CounterFiet
                                    </th>
                                    <th>
                                        Mismatch
                                    </th>
                                    <th>
                                        Claim
                                    </th>
                                    <th>
                                        Desecrated
                                    </th>
                                    <th>
                                        Short
                                    </th>
                                    <th>
                                        Excess
                                    </th>
                                    <th>
                                        Unprocess
                                    </th>
                                    <th>
                                        Amount
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.AssignedAmount
                                    </td>
                                    <td>
                                        @(item.NumberOfPiecesReIssuable != null ? item.NumberOfPiecesReIssuable : 0)
                                    </td>
                                    <td>
                                        @(item.NumberOfPiecesSoiled != null ? item.NumberOfPiecesSoiled : 0)
                                    </td>
                                    <td>
                                        @(item.NumberOfPiecesMachineRejected != null ? item.NumberOfPiecesMachineRejected : 0)
                                    </td>
                                    <td>
                                        @(item.NumberOfPiecesCounterFeit != null ? item.NumberOfPiecesCounterFeit : 0)
                                    </td>
                                    <td>
                                        @(item.NumberOfPiecesMismatch != null ? item.NumberOfPiecesMismatch : 0)
                                    </td>
                                    <td>
                                        @(item.NumberOfPiecesClaim != null ? item.NumberOfPiecesClaim : 0)
                                    </td>
                                    <td>
                                        @(item.NumberOfPiecesDesecrated != null ? item.NumberOfPiecesDesecrated : 0)
                                    </td>
                                    <td>
                                        @(item.NumberOfPiecesShort != null ? item.NumberOfPiecesShort : 0)
                                    </td>
                                    <td>
                                        @(item.NumberOfPiecesExcess != null ? item.NumberOfPiecesExcess : 0)
                                    </td>
                                    <td>
                                        @(item.NumberOfPiecesUnprocess != null ? item.NumberOfPiecesUnprocess : 0)
                                    </td>
                                    <td>
                                        @(item.TotalValue != null ? item.TotalValue : 0)
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 text-right">
            <div class="btn-group" role="group">
                <a href="javascript://" onclick="window.history.back()" class="btn btn-default"><i class="fa fa-close"></i> Cancel / Back</a>
                <button type="submit" id="submit" class="btn btn-success"><i class="fa fa-check"></i> Submit</button>
            </div>
        </div>
    </div>
</form>